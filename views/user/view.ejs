<!doctype html>
<html lang="en" data-bs-theme="auto">

<head>
    <script src="../js/color-modes.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.122.0">
    <title>view customer</title>

    <link href="../css/bootstrap.min.css" rel="stylesheet">


    <link rel="stylesheet" href="../css/dark-light.css">

    <!-- Custom styles for this template -->
    <link href="../css/sidebars.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/main.css">


</head>

<body>
      <!-- dark-light-mode -->
    <%- include('../components/dark-light-mode.ejs') %>

    <main class="d-flex flex-nowrap">



        <%- include('../components/sidebar.ejs',{currentPage : "view"}) %>

        <section class="w-100">
            <%- include('../components/navbar.ejs') %>



            <nav style="width: 88%;" aria-label="breadcrumb"
                class="d-flex   mt-3  ms-1 justify-content-md-between px-2  flex-wrap">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="#">Home</a></li>
                    <li class="breadcrumb-item" aria-current="page"><%= user.firstname + " "+ user.lastname%></li>
                </ol>
                <p><span class="fw-medium fs-5">Id :</span> <%= user._id%></p>
            </nav>





            <!-- formulaire -->
            <table style="width: 88%;" class="table table-striped table-bordered mt-4 ms-1">
                <tr>
                    <th>Firstname</th>
                    <td><%= user.firstname%></td>
                </tr>
                <tr>
                    <th>LastName</th>
                    <td><%= user.lastname %></td>
                </tr>
                <tr>
                    <th>Tel</th>
                    <td><%= user.phone %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= user.email %></td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td><%= user.gender === 'M' ? "Male":"Female" %></td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td><%= user.country %></td>
                </tr>
                <tr>
                    <th>Created On</th>
                    <td><%= moment(user.createdAt).fromNow();   %></td>
                </tr>
                <tr>
                    <th>Last Update On</th>
                    <td><%= moment(user.updatedAt).fromNow();   %></td>
                </tr>
                </tbody>
            </table>


    </main>


    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
</body>

</html>