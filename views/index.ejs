<!doctype html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="./js/color-modes.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.122.0">
  <title>Dashboard</title>

  <link href="./css/bootstrap.min.css" rel="stylesheet">


  <link rel="stylesheet" href="./css/dark-light.css">

  <!-- Custom styles for this template -->
  <link href="./css/sidebars.css" rel="stylesheet">
  <link rel="stylesheet" href="./css/main.css">


</head>

<body>
  <!-- dark-light-mode -->
  <%- include('./components/dark-light-mode.ejs') %>

  <main class="d-flex flex-nowrap">

    <%- include('./components/sidebar.ejs',{currentPage : "index"}) %>

    <section class="w-100">
      <%- include('./components/navbar.ejs') %>



      <table style="width: 98%;" class="table table-striped table-bordered mx-auto mt-4 text-center">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Country</th>
            <th scope="col">Age</th>
            <th scope="col">Last Updated</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
           <% users.forEach((item,index) => { %>
            <td scope="row"><%= index + 1 %></td>
            <td><%= item.firstname + " " + item.lastname %></td>
            <td><%= item.gender === 'M' ? "Male":"Female" %></td>
            <td><%= item.country %></td>
            <td><%= item.age %></td>
            <td><%= moment(item.updatedAt).fromNow();   %></td>
            <td>
              <a href="./user/<%= item._id %>" data-bs-toggle="tooltip" data-bs-title="view details"
                class="btn btn-primary"><i class="bi bi-eye"></i></a>
              <a href="./user/<%= item._id %>" data-bs-toggle="tooltip" data-bs-title="edit user" class="btn btn-primary"><i
                  class="bi bi-pencil"></i></a>
              <button data-bs-toggle="tooltip" data-bs-title="delete user" class="btn btn-danger">delete</button>
            </td>
          </tr>
           <% }) %>
        </tbody>
      </table>
    </section>
  </main>
</body>

<script src="./js/bootstrap.bundle.min.js"></script>
<script src="./js/sidebars.js"></script>
<script src="./js/main.js"></script>


</html>